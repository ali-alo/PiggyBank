@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Подтверждение почты";
}

<div class="col-md-8 bg-white rounded-2 p-3">
    <h1>@ViewData["Title"]</h1>
    <h2>Введите свой почтовый ящик.</h2>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="w-100 btn btn-lg btn-primary mt-2">Отправить подтверждение</button>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
